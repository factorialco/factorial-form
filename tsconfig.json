{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "target": "ES5",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "lib": ["es2019"],
    "strict": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [ "./src/**/*", "__tests__/**/*.spec.ts" ]
}

